fn test_if_statement() {
    let mut x = 1;
    let y = true;
    if y {
        x += 1;
    }

    assert_eq(x, 2);
}

fn test_else_statement() {
    let mut x = 1;
    let y = false;
    if y {
        x += 1;
    } else {
        x += 2;
    }

    assert_eq(x, 3);
}

fn test_else_if_statement() {
    let mut x = 1;
    let y = false;
    let z = true;
    if y {
        x += 1;
    } else if z {
        x += 2;
    }

    assert_eq(x, 3);
}
